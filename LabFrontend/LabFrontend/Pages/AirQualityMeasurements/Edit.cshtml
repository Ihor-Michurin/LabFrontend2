@page
@model LabFrontend.Pages.AirQualityMeasurements.EditModel

<h1>Edit Air Quality Measurement</h1>

<form method="post">
    <input type="hidden" asp-for="AirQualityMeasurement.Id" />

    <div class="form-group">
        <label for="receptionPointId">Reception Point Id</label>
        <input class="form-control" id="receptionPointId" asp-for="AirQualityMeasurement.ReceptionPointId" />
    </div>
    <div class="form-group">
        <label for="date">Date</label>
        <input class="form-control" id="date" asp-for="AirQualityMeasurement.Date" />
    </div>
    <div class="form-group">
        <label for="temperature">Temperature</label>
        <input class="form-control" id="temperature" asp-for="AirQualityMeasurement.Temperature" />
    </div>
    <div class="form-group">
        <label for="pressure">Pressure</label>
        <input class="form-control" id="pressure" asp-for="AirQualityMeasurement.Pressure" />
    </div>
    <div class="form-group">
        <label for="humidity">Humidity</label>
        <input class="form-control" id="humidity" asp-for="AirQualityMeasurement.Humidity" />
    </div>
    <div class="form-group">
        <label for="iaq">IAQ</label>
        <input class="form-control" id="iaq" asp-for="AirQualityMeasurement.Iaq" />
    </div>
    <div class="form-group">
        <label for="co2Equivalent">CO2 Equivalent</label>
        <input class="form-control" id="co2Equivalent" asp-for="AirQualityMeasurement.Co2Equivalent" />
    </div>
    <div class="form-group">
        <label for="breathVocEquivalent">Breath VOC Equivalent</label>
        <input class="form-control" id="breathVocEquivalent" asp-for="AirQualityMeasurement.BreathVocEquivalent" />
    </div>
    <div class="form-group">
        <label for="isNormal">Is Normal</label>
        <input type="checkbox" id="isNormal" asp-for="AirQualityMeasurement.IsNormal" asp-nullable="true" />
        
    </div>
    <div class="form-group">
        <label for="iaqLevel">IAQ Level</label>
        <input class="form-control" id="iaqLevel" asp-for="AirQualityMeasurement.IaqLevel" />
    </div>
    <div class="form-group">
        <label for="season">Season</label>
        <input class="form-control" id="season" asp-for="AirQualityMeasurement.Season" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
