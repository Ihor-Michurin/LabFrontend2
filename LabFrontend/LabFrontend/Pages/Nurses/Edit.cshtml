@page
@model EditModel
@{
    ViewData["Title"] = "Edit Nurse";
}

<h1>Edit Nurse</h1>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <input type="hidden" asp-for="Nurse.Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nurse.Name" class="control-label"></label>
                <input asp-for="Nurse.Name" class="form-control" />
                <span asp-validation-for="Nurse.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nurse.DateOfBirth" class="control-label"></label>
                <input type="date" input asp-for="Nurse.DateOfBirth" class="form-control" />
                <span asp-validation-for="Nurse.DateOfBirth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nurse.Gender" class="control-label"></label>
                <input asp-for="Nurse.Gender" class="form-control" />
                <span asp-validation-for="Nurse.Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nurse.ContactInformation" class="control-label"></label>
                <input asp-for="Nurse.ContactInformation" class="form-control" />
                <span asp-validation-for="Nurse.ContactInformation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
