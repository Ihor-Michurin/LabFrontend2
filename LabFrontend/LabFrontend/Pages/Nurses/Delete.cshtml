@page
@model DeleteModel
@{
    ViewData["Title"] = "Delete Nurse";
}

<h1>Delete Nurse</h1>

<h3>Are you sure you want to delete this nurse?</h3>
<div>
    <h4>Nurse</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Id
        </dt>
        <dd class="col-sm-10">
            @Model.Nurse.Id
        </dd>
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Nurse.Name
        </dd>
        <dt class="col-sm-2">
            Date of Birth
        </dt>
        <dd class="col-sm-10">
            @Model.Nurse.DateOfBirth.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            Gender
        </dt>
        <dd class="col-sm-10">
            @Model.Nurse.Gender
        </dd>
        <dt class="col-sm-2">
            Contact Information
        </dt>
        <dd class="col-sm-10">
            @Model.Nurse.ContactInformation
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Nurse.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-page="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
