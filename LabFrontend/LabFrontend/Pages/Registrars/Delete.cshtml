@page
@model DeleteModel

<h1>Delete Registrar</h1>

<h3>Are you sure you want to delete this registrar?</h3>

<div>
    <h4>Registrar</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Id</dt>
        <dd class="col-sm-10">@Model.Registrar.Id</dd>

        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Registrar.Name</dd>

        <dt class="col-sm-2">Date of Birth</dt>
        <dd class="col-sm-10">@Model.Registrar.DateOfBirth.ToShortDateString()</dd>

        <dt class="col-sm-2">Gender</dt>
        <dd class="col-sm-10">@Model.Registrar.Gender</dd>

        <dt class="col-sm-2">Contact Information</dt>
        <dd class="col-sm-10">@Model.Registrar.ContactInformation</dd>

        <dt class="col-sm-2">Notify Level</dt>
        <dd class="col-sm-10">@Model.Registrar.NotifyLevel</dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Registrar.Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="./Index">Cancel</a>
    </form>
</div>
