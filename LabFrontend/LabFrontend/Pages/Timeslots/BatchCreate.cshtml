@page
@model LabFrontend.Pages.Timeslots.BatchCreateModel
@{
    ViewData["Title"] = "Batch Create Timeslots";
}

<h1>Batch Create Timeslots</h1>

<form method="post">
    <div class="form-group">
        <label for="analisisReceptionPointId">Analysis Reception Point Id:</label>
        <input type="text" id="analisisReceptionPointId" name="AnalisisReceptionPointId" class="form-control" asp-for="Timeslot.analisisReceptionPointId" required>
    </div>

    <div class="form-group">
        <label for="startDate">Start Date:</label>
        <input type="datetime-local" id="startDate" name="StartDate" class="form-control" asp-for="Timeslot.startDate" required>
    </div>

    <div class="form-group">
        <label for="endDate">End Date:</label>
        <input type="datetime-local" id="endDate" name="EndDate" class="form-control" asp-for="Timeslot.endDate" required>
    </div>

    <div class="form-group">
        <label for="duration">Duration (minutes):</label>
        <input type="number" id="duration" name="Duration" class="form-control" asp-for="Timeslot.duration" required>
    </div>

    <button type="submit" class="btn btn-primary">Create Timeslots</button>
</form>
