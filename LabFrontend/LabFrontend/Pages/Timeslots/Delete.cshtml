@page
@model DeleteModel
@{
    ViewData["Title"] = "Delete Timeslot";
}

<h1>Delete Timeslot</h1>

<h3>Are you sure you want to delete this timeslot?</h3>

<div>
    <h4>Timeslot</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Id
        </dt>
        <dd class="col-sm-10">
            @Model.Timeslot.Id
        </dd>
        <dt class="col-sm-2">
            Analysis Reception Point Id
        </dt>
        <dd class="col-sm-10">
            @Model.Timeslot.AnalysisReceptionPointId
        </dd>
        <dt class="col-sm-2">
            Analysis Result Id
        </dt>
        <dd class="col-sm-10">
            @Model.Timeslot.AnalysisResultId
        </dd>
        <dt class="col-sm-2">
            Time
        </dt>
        <dd class="col-sm-10">
            @Model.Timeslot.Time
        </dd>
        <dt class="col-sm-2">
            Available
        </dt>
        <dd class="col-sm-10">
            @Model.Timeslot.Avaliable
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Timeslot.Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>