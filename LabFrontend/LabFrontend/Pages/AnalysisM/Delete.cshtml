@page
@model DeleteModel
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this analysis?</h3>
<div>
    <h4>Analysis</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Id</dt>
        <dd class="col-sm-10">@Model.Analysis.Id</dd>
        <dt class="col-sm-2">Duration</dt>
        <dd class="col-sm-10">@Model.Analysis.Duration</dd>
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Analysis.Name</dd>
        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Analysis.Price</dd>
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Analysis.Description</dd>
        <dt class="col-sm-2">Analysis Values</dt>
        <dd class="col-sm-10">@Model.Analysis.AnalysisValues</dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Analysis.Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
